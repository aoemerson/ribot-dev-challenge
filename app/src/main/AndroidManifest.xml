<?xml version="1.0" encoding="utf-8"?>
<manifest package="aoemerson.github.io.riapidevchallenge"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.github.aoemerson.riapidevchallenge.view.main.MainRibotsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.aoemerson.riapidevchallenge.view.detail.RibotProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>